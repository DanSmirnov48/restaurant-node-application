<html>
    <head>
        {{>header}}
        <div class="text-right mr-3 mt-3">
            {{^user}}
                <a id="login" href="/login" class="btn btn-light">Sign in</a>
                <a id="login" href="/register" class="btn btn-light">Register</a>
            {{/user}}
            {{#user}}
                <a id="logout" href="/logout" class="btn btn-primary">Sign out</a>
            {{/user}}
        </div>
    </head>
    <body>
        {{#entry}}

        <div class="container mt-5">
            <div class="card">
                <img src="../{{dishImage}}" class="card-img-top" alt="{{dishImage}}" />
                <div class="card-body">
                    <h5 class="card-title">{{dishName}}</h5>
                    <h6 class="card-title">Â£{{dishPrice}}</h6>
                    <p class="card-text">{{dishDesc}}</p>
                    <div class="d-flex justify-content-around">
                        <div class="ml-3">
                            <p class="card-text">
                                <h4 class="ml-3">Ingredients</h4>
                                <ul class="custom-list">
                                    {{#dishIngredients}}
                                        <li> {{.}} </li>
                                    {{/dishIngredients}}
                                </ul> 
                            </p>
                        </div>
                        <div class="mr-5">
                            <p class="card-text">
                                <h4 class="ml-3">Allergies</h4>
                                <ul class="custom-list">
                                    {{#dishallergies}}
                                        <li> {{.}} </li>
                                    {{/dishallergies}}
                                </ul> 
                            </p>
                        </div>

                    </div>

                </div>
            </div>
        </div>

        <style>
            .card {
                width: 30rem;
                background: #222;
                border: 1px solid #dd2476;
                color: rgba(250, 250, 250, 0.8);
                margin-bottom: 2rem;
            }
            body {
                background: #111;
            }
            .custom-list{
                margin: 0;
                padding-left: 1.2rem;
            }
            .custom-list li {
                position: relative;
                list-style-type: none;
                padding-left: 2.5rem;
                margin-bottom: 0.5rem;
            }
            .custom-list li:before {
                content: '';
                display: block;
                position: absolute;
                left: 0;
                top: -2px;
                width: 5px;
                height: 11px;
                border-width: 0 2px 2px 0;
                border-style: solid;
                border-color: #00a8a8;
                transform-origin: bottom left;
                transform: rotate(45deg);
            }
        </style>

        {{/entry}}
        {{^entry}}
            No entries yet.
            <div>
                <a href="/" class="btn btn-dark">Nothing here</a>
            </div>
        {{/entry}}
    </body>
</html>